<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clientHomePage"
    android:background="@drawable/drag_bg">

    <TextView
        android:id="@+id/bTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="Roboto-bold"
        android:text="Home"
        android:textColor="@color/White"
        android:textSize="30dp" />



    <Button
        android:id="@+id/accidentMap"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@drawable/btn_bg"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bTitle"
        android:textColor="@color/White"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Load accident map" />

    <Button
        android:id="@+id/claimMenu"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@drawable/btn_bg"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/accidentMap"
        android:textColor="@color/White"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Submit a claim" />

    <Button
        android:id="@+id/checkClient"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@drawable/btn_bg"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/claimMenu"
        android:textColor="@color/White"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Client Policy Details" />

</RelativeLayout>